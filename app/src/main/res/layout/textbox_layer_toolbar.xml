<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layer_toolbar_height">

    <ImageButton
        android:id="@+id/text_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_edit_white_24dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <ImageButton
        android:id="@+id/font_size_up"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_vertical_align_top_white_24dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_toEndOf="@id/text_edit_button"
        android:layout_toRightOf="@id/text_edit_button" />

    <ImageButton
        android:id="@+id/font_size_down"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_vertical_align_bottom_white_24dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_toEndOf="@id/font_size_up"
        android:layout_toRightOf="@id/font_size_up" />

    <ImageButton
        android:id="@+id/show_full_editor"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_mode_comment_white_24dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_toEndOf="@id/font_size_down"
        android:layout_toRightOf="@id/font_size_down" />

    <ImageButton
        android:id="@+id/add_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_access_time"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_toEndOf="@id/show_full_editor"
        android:layout_toRightOf="@id/show_full_editor" />


    <ImageButton
        android:id="@+id/delete_selected_annotation"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_delete_white_18dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />



</RelativeLayout>